<div class="layout">
  <div class="grid gap--medium">
    <div class="row">
      <!-- Element Card (Periodic Table Style) -->
      <div class="col col--span-1">
        <div style="border: 4px solid black; padding: 16px; text-align: center; background: white;">
          <div style="font-size: 24px; font-weight: bold; font-family: 'Courier New', monospace;">
            {{ data.element.atomic_number }}
          </div>
          <div style="font-size: 96px; font-weight: bold; font-family: 'Courier New', monospace; line-height: 1;">
            {{ data.element.symbol }}
          </div>
          <div style="font-size: 28px; font-weight: bold; font-family: 'Courier New', monospace;">
            {{ data.element.name }}
          </div>
          <div style="font-size: 20px; font-family: 'Courier New', monospace;">
            {{ data.element.atomic_mass }}
          </div>
        </div>
      </div>
      <!-- Element Details -->
      <div class="col col--span-2" style="padding-left: 24px;">
        <div class="value value--large" style="font-family: 'Courier New', monospace; margin-bottom: 12px;">
          {{ data.element.category | upcase }}
        </div>
        <div style="font-family: 'Courier New', monospace; font-size: 18px; line-height: 1.6;">
          <div><strong>State:</strong> {{ data.element.standard_state }}</div>
          <div><strong>Electron Config:</strong> {{ data.element.electron_configuration }}</div>
          <div><strong>Electronegativity:</strong> {{ data.element.electronegativity }}</div>
          <div><strong>Melting Point:</strong> {{ data.element.melting_point }}</div>
          <div><strong>Boiling Point:</strong> {{ data.element.boiling_point }}</div>
          <div><strong>Density:</strong> {{ data.element.density }} g/cmÂ³</div>
          <div><strong>Oxidation States:</strong> {{ data.element.oxidation_states }}</div>
          <div><strong>Discovered:</strong> {{ data.element.year_discovered }}</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
