<div class="layout">
  <div class="flex flex--row gap--medium portrait:flex--col p--2 flex--center-y">
    <!-- Element Card -->
    <div class="outline rounded p--2 bg--white no-shrink w--40 md:w--44 lg:w--48 min-w--40">
      <!-- Top row: Atomic number (left) and Atomic mass (right) -->
      <div class="flex flex--row flex--between mb--xsmall">
        <div class="value value--small value--tnums">
          {{ element.atomic_number }}
        </div>
        <div class="value value--xsmall value--tnums" data-value-fit="true">
          {{ element.atomic_mass }}
        </div>
      </div>
      
      <!-- Center: Symbol (large) -->
      <div class="text--center mb--xsmall">
        <div class="value value--xlarge sm:value--xxlarge md:value--xxlarge lg:value--xxxlarge">
          {{ element.symbol }}
        </div>
      </div>
      
      <!-- Bottom: Element name and category -->
      <div class="text--center">
        <div class="title title--small mb--xsmall">
          {{ element.name }}
        </div>
        <div class="label label--small label--inverted">
          {{ element.category }}
        </div>
      </div>
    </div>
    
    <!-- Element Details -->
    <div class="flex flex--col gap--xsmall">
      <!-- Element name header -->
      <div class="mb--xsmall">
        <div class="title title--large md:title--xlarge">{{ element.name }}</div>
      </div>
      
      <div class="grid grid--cols-2 gap--xsmall">
        <div class="item">
          <div class="content">
            <div class="flex flex--row gap--small flex--wrap">
              <span class="label label--small label--underline">State</span>
              <span class="description">{{ element.standard_state }}</span>
            </div>
          </div>
        </div>
        
        <div class="item">
          <div class="content">
            <div class="flex flex--row gap--small flex--wrap">
              <span class="label label--small label--underline">Electron Config</span>
              <span class="description" data-clamp="1">{{ element.electron_configuration }}</span>
            </div>
          </div>
        </div>
        
        <div class="item">
          <div class="content">
            <div class="flex flex--row gap--small flex--wrap">
              <span class="label label--small label--underline">Density</span>
              <span class="description">{{ element.density }} g/cmÂ³</span>
            </div>
          </div>
        </div>
        
        <div class="item">
          <div class="content">
            <div class="flex flex--row gap--small flex--wrap">
              <span class="label label--small label--underline">Discovered</span>
              <span class="description">{{ element.year_discovered }}</span>
            </div>
          </div>
        </div>
        
        <div class="item">
          <div class="content">
            <div class="flex flex--row gap--small flex--wrap">
              <span class="label label--small label--underline">Melting Point</span>
              <span class="description">{{ element.melting_point }} K</span>
            </div>
          </div>
        </div>
        
        <div class="item">
          <div class="content">
            <div class="flex flex--row gap--small flex--wrap">
              <span class="label label--small label--underline">Boiling Point</span>
              <span class="description">{{ element.boiling_point }} K</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
  <img src="{{ icon_atom }}" style="height: 1em; vertical-align: middle;" />
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
