<div class="layout">
  <div class="grid gap--small">
    <div class="row">
      <!-- Element Card -->
      <div class="col col--span-1">
        <div style="border: 3px solid black; padding: 12px; text-align: center; background: white;">
          <div style="font-size: 18px; font-weight: bold; font-family: 'Courier New', monospace;">
            {{ element.atomic_number }}
          </div>
          <div style="font-size: 64px; font-weight: bold; font-family: 'Courier New', monospace; line-height: 1;">
            {{ element.symbol }}
          </div>
          <div style="font-size: 20px; font-weight: bold; font-family: 'Courier New', monospace;">
            {{ element.name }}
          </div>
          <div style="font-size: 14px; font-family: 'Courier New', monospace;">
            {{ element.atomic_mass }}
          </div>
        </div>
      </div>
      <!-- Element Details -->
      <div class="col col--span-2" style="padding-left: 16px;">
        <div style="font-family: 'Courier New', monospace; font-size: 14px; line-height: 1.5;">
          <div style="font-weight: bold; margin-bottom: 8px;">{{ element.category | upcase }}</div>
          <div><strong>State:</strong> {{ element.standard_state }}</div>
          <div><strong>Config:</strong> {{ element.electron_configuration }}</div>
          <div><strong>Discovered:</strong> {{ element.year_discovered }}</div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
