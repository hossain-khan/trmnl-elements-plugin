<div class="layout">
  <div class="flex flex--col gap--medium flex--center-x">
    <!-- Element Card -->
    <div class="outline rounded p--3 bg--white no-shrink w--52 min-w--52">
      <!-- Top row: Atomic number (left) and Atomic mass (right) -->
      <div class="flex flex--row flex--between mb--small">
        <div class="value value--small value--tnums sm:value--medium md:value--medium">
          {{ element.atomic_number }}
        </div>
        <div class="value value--xxsmall value--tnums sm:value--xsmall" data-value-fit="true">
          {{ element.atomic_mass }}
        </div>
      </div>
      
      <!-- Center: Symbol (large) -->
      <div class="text--center mb--xsmall">
        <div class="value value--xxlarge sm:value--xxlarge md:value--xxxlarge lg:value--xxxlarge">
          {{ element.symbol }}
        </div>
      </div>
      
      <!-- Bottom: Element name and category -->
      <div class="text--center">
        <div class="title title--small mb--xsmall">
          {{ element.name }}
        </div>
        <div class="label label--small label--inverted">
          {{ element.category }}
        </div>
      </div>
    </div>
    
    <!-- Element Details -->
    <div class="flex flex--col gap--xsmall">
      <div class="mb--xsmall text--center">
        <div class="title title--large md:title--xlarge" data-value-fit="true" data-value-fit-max-height="100">
          {{ element.name | upcase }}
        </div>
      </div>
      
      <div class="flex flex--col gap--xsmall">
        <div class="item">
          <div class="content">
            <div class="flex flex--row gap--small flex--wrap">
              <span class="label label--small label--underline">State</span>
              <span class="description">{{ element.standard_state }}</span>
            </div>
          </div>
        </div>
        
        <div class="item">
          <div class="content">
            <div class="flex flex--row gap--small flex--wrap">
              <span class="label label--small label--underline">Density</span>
              <span class="description">{{ element.density }} g/cmÂ³</span>
            </div>
          </div>
        </div>
        
        <div class="item">
          <div class="content">
            <div class="flex flex--row gap--small flex--wrap">
              <span class="label label--small label--underline">Electron Config</span>
              <span class="description" data-clamp="1">{{ element.electron_configuration }}</span>
            </div>
          </div>
        </div>
        
        <div class="item">
          <div class="content">
            <div class="flex flex--row gap--small flex--wrap">
              <span class="label label--small label--underline">Discovered</span>
              <span class="description">{{ element.year_discovered }}</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
