<div class="layout">
  <div class="flex flex--col gap--medium flex--center-x">
    <!-- Element Card -->
    <div class="outline rounded--large p--medium bg--white w--44">
      <!-- Top row: Atomic number (left) and Atomic mass (right) -->
      <div class="flex flex--row flex--between mb--small">
        <div class="value value--small value--tnums">
          {{ element.atomic_number }}
        </div>
        <div class="value value--xxsmall value--tnums">
          {{ element.atomic_mass }}
        </div>
      </div>
      
      <!-- Center: Symbol (large) -->
      <div class="text--center mb--xsmall">
        <div class="value value--xxlarge" style="line-height: 1;">
          {{ element.symbol }}
        </div>
      </div>
      
      <!-- Bottom: Element name and category -->
      <div class="text--center">
        <div class="title title--small mb--xsmall">
          {{ element.name }}
        </div>
        <div class="label label--small label--gray">
          {{ element.category }}
        </div>
      </div>
    </div>
    
    <!-- Element Details -->
    <div class="flex flex--col gap--xsmall text--center">
      <div class="value value--large">
        {{ element.category | upcase }}
      </div>
      
      <div class="flex flex--row gap--xsmall flex--center-x flex--wrap">
        <span class="label label--small">{{ element.standard_state }}</span>
        <span class="description">Â·</span>
        <span class="label label--small">{{ element.year_discovered }}</span>
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
