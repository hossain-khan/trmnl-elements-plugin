<div class="layout">
  <div class="grid">
    <div class="col col--center">
      <div style="border: 2px solid black; padding: 8px; text-align: center; background: white;">
        <div style="font-size: 12px; font-weight: bold; font-family: 'Courier New', monospace;">
          {{ data.element.atomic_number }}
        </div>
        <div style="font-size: 36px; font-weight: bold; font-family: 'Courier New', monospace; line-height: 1;">
          {{ data.element.symbol }}
        </div>
        <div style="font-size: 12px; font-weight: bold; font-family: 'Courier New', monospace;">
          {{ data.element.name }}
        </div>
      </div>
      <div style="font-family: 'Courier New', monospace; font-size: 10px; margin-top: 4px; text-align: center;">
        {{ data.element.category }}
      </div>
    </div>
  </div>
</div>

<div class="title_bar">
  <span class="title">{{ trmnl.plugin_settings.instance_name }}</span>
</div>
